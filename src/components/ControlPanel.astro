<div class="control-panel">
  <div class="control-row">
    <button id="reverse-button" class="control-button">Reverse</button>
    <button id="half-speed-button" class="control-button">Half Speed</button>
    <button id="mute-button" class="control-button">Mute</button>
    <button id="reset-button" class="control-button">Reset</button>
  </div>
  
  <div class="control-row">
    <button id="insert-button" class="control-button">Insert</button>
    <button id="replace-button" class="control-button">Replace</button>
    <button id="retrigger-button" class="control-button">Retrigger</button>
    <button id="startpoint-button" class="control-button">Start Point</button>
  </div>
  
  <div class="control-row">
    <button id="window-button" class="control-button">Loop Window</button>
    <button id="substitute-button" class="control-button">Substitute</button>
    <button id="sus-button" class="control-button">SUS</button>
    <button id="divide-button" class="control-button">Loop Divide</button>
  </div>
</div>

<style>
  .control-panel {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
  
  .control-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: space-between;
  }
  
  .control-button {
    background-color: #333;
    color: #e0e0e0;
    border: 1px solid #00ff00;
    border-radius: 4px;
    padding: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
    flex: 1;
    min-width: 100px;
    text-align: center;
  }
  
  .control-button:hover {
    background-color: #444;
  }
  
  .control-button.active {
    background-color: #00ff00;
    color: #000;
  }
  
  @media (max-width: 768px) {
    .control-row {
      flex-direction: column;
    }
  }
</style>
