<div class="waveform-display">
  <canvas id="waveform-canvas"></canvas>
  <div class="time-markers">
    <div class="start-marker" id="start-marker"></div>
    <div class="end-marker" id="end-marker"></div>
    <div class="playhead" id="playhead"></div>
  </div>
</div>

<style>
  .waveform-display {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #1a1a1a;
    border-radius: 5px;
    overflow: hidden;
  }
  
  #waveform-canvas {
    width: 100%;
    height: 100%;
  }
  
  .time-markers {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  .start-marker, .end-marker {
    position: absolute;
    top: 0;
    width: 2px;
    height: 100%;
    background-color: rgba(255, 255, 0, 0.7);
  }
  
  .playhead {
    position: absolute;
    top: 0;
    width: 2px;
    height: 100%;
    background-color: #ff0000;
    transition: left 0.1s linear;
  }
</style>
