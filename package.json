{
  "name": "digital-echoplex",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "copy:scripts": "mkdir -p public/scripts && grep -oP 'src=\"(?:[^\"]*/)*\\K[^/\\\"]+\\.js' src/pages/index.astro | sort -u | xargs -I{} cp src/scripts/{} public/scripts/{}",
    "build": "npm run copy:scripts && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest"
  },
  "dependencies": {
    "astro": "^5.12.0",
    "modern-normalize": "^3.0.1",
    "serve": "^14.2.1",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "sass": "^1.89.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.0"
  }
}